// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Used for migrations
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("CUSTOMER") // CUSTOMER, TRAINER, ADMIN
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userPackages    UserPackage[]
  bookings        Booking[]
  taughtClasses   Class[]     @relation("TrainerClasses")
  notifications   Notification[]
  
  // New Relations
  healthProfile   HealthProfile?
  transactions    Transaction[]
  posts           Post[]
  availability    TrainerAvailability[]
  waitlistEntries Waitlist[]
}

model Package {
  id            String   @id @default(cuid())
  name          String
  description   String?
  type          String   // GROUP, PRIVATE
  credits       Int      // How many classes can be booked
  price         Decimal
  validityDays  Int      // How many days valid
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userPackages UserPackage[]
  transactions Transaction[]
}

model UserPackage {
  id             String   @id @default(cuid())
  userId         String
  packageId      String
  remainingCredits Int
  startDate      DateTime @default(now())
  endDate        DateTime?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  package Package @relation(fields: [packageId], references: [id])
  bookings Booking[]
}

model Class {
  id          String   @id @default(cuid())
  name        String
  description String?
  trainerId   String
  startTime   DateTime
  endTime     DateTime
  capacity    Int
  type        String   // GROUP, PRIVATE
  status      String   @default("SCHEDULED") // SCHEDULED, CANCELLED, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trainer     User      @relation("TrainerClasses", fields: [trainerId], references: [id])
  bookings    Booking[]
  waitlist    Waitlist[]
}

model Booking {
  id            String   @id @default(cuid())
  userId        String
  classId       String
  userPackageId String?  // Optional because trial booking might not need package? Or enforcing package usage.
  status        String   @default("CONFIRMED") // CONFIRMED, CANCELLED, NOSHOW
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user        User        @relation(fields: [userId], references: [id])
  class       Class       @relation(fields: [classId], references: [id])
  userPackage UserPackage? @relation(fields: [userPackageId], references: [id])
  transaction Transaction?
}

model Waitlist {
  id        String   @id @default(cuid())
  userId    String
  classId   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  class     Class    @relation(fields: [classId], references: [id])

  @@unique([userId, classId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   // INFO, WARNING, SUCCESS
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

// --- NEW MODELS ---

model HealthProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  emergencyContact String?
  bloodType       String?
  injuries        String?  // JSON or text description of injuries
  parqAnswers     String?  // Stored as JSON string
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String?
  amount      Decimal
  type        String   // INCOME, EXPENSE
  category    String?  // PACKAGE_SALE, SALARY, RENT, COMMISSION
  description String?
  date        DateTime @default(now())
  
  // Relations
  packageId   String?
  bookingId   String?  @unique

  user        User?    @relation(fields: [userId], references: [id])
  package     Package? @relation(fields: [packageId], references: [id])
  booking     Booking? @relation(fields: [bookingId], references: [id])
}

model TrainerAvailability {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int      // 0=Sunday, 1=Monday...
  startTime String   // "09:00"
  endTime   String   // "17:00"
  
  user      User     @relation(fields: [userId], references: [id])
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  authorId    String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id])
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  duration    Int?     // in minutes
  category    String?
  accessLevel String   @default("ALL") // ALL, MEMBER_ONLY
  createdAt   DateTime @default(now())
}
