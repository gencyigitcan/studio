// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ActionLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // e.g., "LOGIN", "BOOKING_CREATE", "PROFILE_UPDATE"
  details   String?  // JSON or text details
  ipAddress String?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("CUSTOMER") // CUSTOMER, TRAINER, ADMIN
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userPackages    UserPackage[]
  bookings        Booking[]
  taughtClasses   Class[]     @relation("TrainerClasses")
  notifications   Notification[]
  measurements      Measurement[] @relation("UserMeasurements")
  givenMeasurements Measurement[] @relation("TrainerMeasurements")
  
  // New Relations
  healthProfile   HealthProfile?
  transactions    Transaction[]
  posts           Post[]
  availability    TrainerAvailability[]
  waitlistEntries Waitlist[]
  actionLogs      ActionLog[]
  leaves          TrainerLeave[]

  // Loyalty & CRM
  loyaltyPoints     Int @default(0)
  noShowCount       Int @default(0)
  
  // Gamification
  streak            Int      @default(0)
  badges            UserBadge[]
  
  // Soft Delete
  deletedAt         DateTime?

  // V3 Updates
  // phone already exists above
  status            String   @default("ACTIVE") // ACTIVE, PASSIVE, BLOCKED
  trainerProfile    TrainerProfile?
  ratingsReceived   Rating[] @relation("TrainerRatings")
  ratingsGiven      Rating[] @relation("UserRatings")
  loginLogs         LoginLog[]
}

model TrainerProfile {
  id              String @id @default(cuid())
  userId          String @unique
  user            User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio             String?
  specialization  String?
  hourlyLimit     Int?
  rating          Float  @default(0)
  ratingCount     Int    @default(0)
  updatedAt       DateTime @updatedAt
}

model LoginLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ip        String?
  userAgent String?
  success   Boolean  @default(true)
  createdAt DateTime @default(now())
}

model LessonType {
  id          String @id @default(cuid())
  name        String @unique
  description String?
  isGroup     Boolean @default(true)
  classes     Class[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Rating {
  id        String   @id @default(cuid())
  bookingId String   @unique
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation("UserRatings", fields: [userId], references: [id])
  
  trainerId String
  trainer   User     @relation("TrainerRatings", fields: [trainerId], references: [id])
  
  score     Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())
}

model Badge {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String   // e.g. "trophy", "star"
  slug        String   @unique // e.g. "first-class", "streak-10"
  
  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  earnedAt  DateTime @default(now())

  @@unique([userId, badgeId])
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique // e.g. "CANCELLATION_WINDOW_HOURS", "MAX_BOOKINGS_PER_WEEK"
  value     String   // Stores values as strings, parsed in app
  description String?
  updatedAt DateTime @updatedAt
}

model TrainerLeave {
  id        String   @id @default(cuid())
  trainerId String
  trainer   User     @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  startDate DateTime
  endDate   DateTime
  reason    String?
  status    String   @default("APPROVED") // APPROVED, REJECTED, PENDING
  
  createdAt DateTime @default(now())
}

model Discount {
  id        String   @id @default(cuid())
  code      String   @unique
  percentage Int?    // e.g. 20 for 20%
  amount    Float?   // e.g. 100 for 100 TL
  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean  @default(true)
  usageLimit Int?    // Max usages global
  usedCount Int      @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  deletedAt DateTime? // Soft delete
}

model Package {
  id            String   @id @default(cuid())
  name          String
  description   String?
  type          String   // GROUP, PRIVATE
  credits       Int      // How many classes can be booked
  price         Decimal
  validityDays  Int      // How many days valid
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  deletedAt     DateTime?

  userPackages UserPackage[]
  transactions Transaction[]
}

model UserPackage {
  id             String   @id @default(cuid())
  userId         String
  packageId      String
  remainingCredits Int
  startDate      DateTime @default(now())
  endDate        DateTime?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  deletedAt      DateTime?

  user    User    @relation(fields: [userId], references: [id])
  package Package @relation(fields: [packageId], references: [id])
  bookings Booking[]
}

model Class {
  id          String   @id @default(cuid())
  name        String
  description String?
  trainerId   String
  startTime   DateTime
  endTime     DateTime
  capacity    Int
  type        String   // GROUP, PRIVATE, REFORMER, MAT, PREGNANCY, STRETCH
  status      String   @default("SCHEDULED") // SCHEDULED, CANCELLED, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // V3 Update: Link to LessonType
  lessonTypeId String?
  lessonType   LessonType? @relation(fields: [lessonTypeId], references: [id])

  deletedAt   DateTime?

  trainer     User      @relation("TrainerClasses", fields: [trainerId], references: [id])
  bookings    Booking[]
  waitlist    Waitlist[]
}

model Booking {
  id            String   @id @default(cuid())
  userId        String
  classId       String
  userPackageId String?
  status        String   @default("CONFIRMED") // CONFIRMED, CANCELLED, COMPLETED, NOSHOW
  attendanceStatus String @default("PENDING") // PENDING, PRESENT, ABSENT, NOSHOW
  
  trainerNote   String?  // Private note about student performance
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  deletedAt     DateTime?

  // V3
  rating        Rating?

  user        User        @relation(fields: [userId], references: [id])
  class       Class       @relation(fields: [classId], references: [id])
  userPackage UserPackage? @relation(fields: [userPackageId], references: [id])
  transaction Transaction?
  
  @@unique([userId, classId])
}

model Waitlist {
  id        String   @id @default(cuid())
  userId    String
  classId   String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([userId, classId])
}

model Measurement {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("UserMeasurements", fields: [userId], references: [id], onDelete: Cascade)
  trainerId String
  trainer   User     @relation("TrainerMeasurements", fields: [trainerId], references: [id])
  date      DateTime @default(now())
  
  weight    Float?
  height    Float?
  waist     Float?
  hips      Float?
  chest     Float?
  arm       Float?
  leg       Float?
  fatRatio  Float?

  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   // INFO, WARNING, SUCCESS, CAMPAIGN
  channel   String   @default("PUSH") // PUSH, EMAIL, SMS
  read      Boolean  @default(false)
  
  // A/B Testing
  campaignId String?
  variant    String? // "A", "B"
  
  createdAt DateTime @default(now())
}

// --- NEW MODELS ---

model HealthProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  emergencyContact String?
  bloodType       String?
  injuries        String?  // JSON or text description of injuries
  parqAnswers     String?  // Stored as JSON string
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String?
  amount      Decimal
  type        String   // INCOME, EXPENSE
  category    String?  // PACKAGE_SALE, SALARY, RENT, COMMISSION
  description String?
  date        DateTime @default(now())
  
  // Relations
  packageId   String?
  bookingId   String?  @unique

  user        User?    @relation(fields: [userId], references: [id])
  package     Package? @relation(fields: [packageId], references: [id])
  booking     Booking? @relation(fields: [bookingId], references: [id])
}

model TrainerAvailability {
  id        String   @id @default(cuid())
  userId    String
  dayOfWeek Int      // 0=Sunday, 1=Monday...
  startTime String   // "09:00"
  endTime   String   // "17:00"
  
  user      User     @relation(fields: [userId], references: [id])
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  authorId    String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id])
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  duration    Int?     // in minutes
  category    String?
  accessLevel String   @default("ALL") // ALL, MEMBER_ONLY
  createdAt   DateTime @default(now())
}
